<?xml version="1.0" encoding="utf-8"?>
<project>
	<meta title="testris" package="com.liquidmemorygames.testris" version="0.2.0" company="Liquid Memory Games" />

 	<app file="Main" main="Main" path="bin" />

	<window fps="60" background="0x333333" />
	<window width="720" height="500" resizable="false" unless="mobile" />
	<window width="0" height="0" resizable="false" orientation="portrait" if="mobile" />
	<window orientation="landscape" vsync="true" antialiasing="0" if="cpp" />

	<source path="src" />

	<haxelib name="HaxePunk" />

	<assets path="assets/graphics" rename="graphics" include="*.png|*.jpg" />
	<assets path="assets/audio" rename="audio" include="*.mp3" if="flash" embed="false"/>
	<assets path="assets/audio" rename="audio" include="*.wav|*.ogg" unless="flash" />
	<!-- 	<assets path="assets/font" rename="font" include="*.ttf" embed="true"/> -->

	<icon path="assets/HaxePunk.svg" />


	<!-- <android installLocation="internalOnly" /> -->
	<android android:name="android.hardware.telephony" android:required="false" />
</project>
